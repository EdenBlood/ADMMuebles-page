---
	import "../../styles/global.css"
import Footer from "../../components/Footer.astro";
import Header from "../../components/Header.astro";
import { muebles } from "../../storage";

  export function getStaticPaths() {
    return muebles.map(({id, img, alt, title, description, category, materials}) => ({
      params: { id: id.toString() },
      props: { img, alt, title, description, category, materials },
    }));
  }
---

  <head>
    <title>ADM Muebles | Detalle del mueble</title>
    <meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <meta name="description" content={`${Astro.props.title} - ${Astro.props.description}`} />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="bg-slate-100 text-slate-950 font-outfit relative flex flex-col min-h-screen">
    <Header />
    <main class="md:mt-20.5 max-w-7xl mx-auto p-4">
      <a href="/muebles" class="text-blue-500 hover:underline mb-4 inline-block">← Volver a la lista de muebles</a>
      <div class="w-full grid grid-cols-2 gap-14">
        <img src={Astro.props.img} alt={Astro.props.alt} class="w-full h-auto mb-4 rounded-lg shadow-md" />
        <div class="h-full flex flex-col justify-center gap-2">
          <h1 class="text-4xl font-normal text-red-900 mb-4">{Astro.props.title}</h1>
          <p class="">{Astro.props.description}</p>
          <p class=""><strong>Categoría:</strong> {Astro.props.category}</p>
          <p class=""><strong>Materiales:</strong> {Astro.props.materials.join(", ")}</p>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>
