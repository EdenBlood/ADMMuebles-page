---
interface ImagesState {
  src: string;
  title: string;
  description: string;
}

const images: ImagesState[] = [
  {
    src: "/muebles/mueble-1.jpg",
    title: "Rack TV",
    description: "Paraíso Laqueado, Negro ceramico y Negro mate."
  },
  {
    src: "/muebles/mueble-2.jpg",
    title: "Exhibidor Cosmética",
    description: "Gris Pelado, Blanco brillante"
  },
  {
    src: "/muebles/mueble-3.jpg",
    title: "Rack TV",
    description: "Paraiso Laqueado, Negro ceramico y Negro mate."
  },
  {
    src: "/muebles/mueble-4.jpg",
    title: "Rack TV",
    description: "Paraiso Laqueado, Negro ceramico y Negro mate."
  },
  {
    src: "/muebles/mueble-5.jpg",
    title: "Rack TV",
    description: "Paraiso Laqueado, Negro ceramico y Negro mate."
  },
  {
    src: "/muebles/mueble-6.jpg",
    title: "Rack TV",
    description: "Paraíso Laqueado, Negro ceramico y Negro mate."
  },
];
const double = images.concat(images); // duplicar para loop suave
---

<div class="mb-4 w-full bg-slate-200">
  <section class="relative h-full w-full overflow-hidden">
    <div class="slider-track flex" role="list">
      {double.map((img, i) => (
        <div class="slide flex-none relative" role="listitem">
          <img src={img.src} alt={`Mueble ${i % images.length + 1}`} class="h-[80vh] w-[50vw] object-cover object-center" />
          <div class="absolute bottom-6 left-6 bg-slate-200/20 p-3">
            <h2 class="text-5xl font-light">{img.title}</h2>
            <p class="text-xl font-extralight">{img.description}</p>
          </div>
        </div>
      ))}
    </div>
  </section>
</div>

<style>
.slider-track {
  will-change: transform;
  animation: slide 35s linear infinite;
}
.slider-track:hover { animation-play-state: paused; }

/* Mueve la pista completa la mitad (porque duplicamos slides). */
@keyframes slide {
  0%   { transform: translateX(0); }
  100% { transform: translateX(-300%); }
}

/* Ajustes opcionales para evitar saltos en algunos navegadores */
.slide img { display:block; }
</style>
